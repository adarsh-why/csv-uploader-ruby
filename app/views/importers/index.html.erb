<p id="notice"><%= notice %></p>

<h1>Importers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Availability date</th>
      <th>Slug</th>
      <th>Stock total</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @importers.each do |importer| %>
      <tr>
        <td><%= importer.name %></td>
        <td><%= importer.description %></td>
        <td><%= importer.price %></td>
        <td><%= importer.availability_date %></td>
        <td><%= importer.slug %></td>
        <td><%= importer.stock_total %></td>
        <td><%= importer.category %></td>
        <td><%= link_to 'Show', importer %></td>
        <td><%= link_to 'Edit', edit_importer_path(importer) %></td>
        <td><%= link_to 'Destroy', importer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Import Products as CSV</h3>
<%= form_tag import_importers_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload Products" %>
<% end %>

<%= link_to 'New Importer', new_importer_path %>
